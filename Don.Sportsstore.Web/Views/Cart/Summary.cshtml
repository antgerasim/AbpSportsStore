@model Don.Sportsstore.Carts.Cart

<div id="cart">
    <span class="caption">
        <b>Your cart:</b>
        @Model.Lines.Sum(x => x.Quantity) items(s),
        @Model.CalcTotalValue().ToString("C")
    </span>
    @Html.ActionLink("Checkout", "Index", "Cart", new {returnUrl = Request.Url.PathAndQuery},new {@class="btn btn-default btn-xs"})
</div>